<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/addition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start Adding"
        android:textSize="40dp"
        android:textColor="@color/light"
        android:onClick="onItemClick"
        android:background="@color/AddTheme"/>

    <Button
        android:id="@+id/subtraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start Subtracting"
        android:textSize="40dp"
        android:textColor="@color/light"
        android:onClick="onItemClick"
        android:background="@color/SubTheme"/>

    <Button
        android:id="@+id/multiplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start Multiplying"
        android:textSize="40dp"
        android:textColor="@color/light"
        android:onClick="onItemClick"
        android:background="@color/MultTheme"/>

    <Button
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start Dividing"
        android:textSize="40dp"
        android:textColor="@color/light"
        android:onClick="onItemClick"
        android:background="@color/DivTheme"/>

</LinearLayout>
